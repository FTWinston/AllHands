{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "common-types": [
        "./packages/common-types/src"
      ],
      "common-ui": [
        "./packages/common-ui/src"
      ],
      "common-ui/*": [
        "./packages/common-ui/src/*"
      ],
      "engine": [
        "./packages/engine/src"
      ],
      "engine/*": [
        "./packages/engine/src/*"
      ],
      "game-ui": [
        "./packages/game-ui/src"
      ],
      "game-ui/*": [
        "./packages/game-ui/src/*"
      ]
    }
  }
}
