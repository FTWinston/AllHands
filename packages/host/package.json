{
  "name": "host",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "@colyseus/core": "^0.16.20",
    "@colyseus/ws-transport": "^0.16.5",
    "colyseus": "^0.16.4",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3"
  },
  "build": {
    "appId": "com.ftwinston.makeitso",
    "productName": "Make It So",
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../host-ui/dist",
        "to": "app/host-ui"
      },
      {
        "from": "../client/dist",
        "to": "app/client"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
